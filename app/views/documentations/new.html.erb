<h3>New documentation</h3>

<% form_for(@documentation) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id, :value=>"#{session[:user_id]}"%>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', documentations_path %>
